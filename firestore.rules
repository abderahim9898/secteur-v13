rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow connection test without authentication (for unauthenticated users)
    match /app_config/connection_test {
      allow read: if true;
    }

    // Allow all authenticated users full access to all collections
    // Collections: notifications, supervisors, rooms, fermes, users, article_names,
    // stocks, stock_transfers, transfer_notifications, bulkDeletionCodes, workers, worker_transfers
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
